@model IEnumerable<MiniShopManager.Models.Item>
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Admin Dashboard</h2>
        <a href="@Url.Action("Create", "Admin")" class="btn btn-primary">Add New Item</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover table-striped mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Stock</th>
                        <th>Image</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Price.ToString("C")</td>
                            <td>@item.Stock</td>
                            <td>
                                <img src="@item.ImageUrl" alt="@item.Name" width="50" height="50" class="rounded" />
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", "Admin", new { id = item.Id })" class="btn btn-sm btn-warning text-white">Edit</a>
                                <a href="@Url.Action("Delete", "Admin", new { id = item.Id })" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
