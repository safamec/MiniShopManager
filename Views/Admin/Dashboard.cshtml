@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@inject IViewLocalizer Localizer
@model IEnumerable<MiniShopManager.Models.Item>

@{
    ViewData["Title"] = Localizer["AdminDashboardTitle"];
}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>@Localizer["AdminDashboardHeading"]</h2>
        <a href="@Url.Action("Create", "Admin")" class="btn btn-primary">@Localizer["AddNewItem"]</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover table-striped mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>@Localizer["Name"]</th>
                        <th>@Localizer["Price"]</th>
                        <th>@Localizer["Stock"]</th>
                        <th>@Localizer["Image"]</th>
                        <th>@Localizer["Actions"]</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Price.ToString("C")</td>
                            <td>@item.Stock</td>
                            <td>
                                <img src="@item.ImageUrl" alt="@item.Name" width="50" height="50" class="rounded" />
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", "Admin", new { id = item.Id })" class="btn btn-sm btn-warning text-white">@Localizer["Edit"]</a>
                                <a href="@Url.Action("Delete", "Admin", new { id = item.Id })" class="btn btn-sm btn-danger">@Localizer["Delete"]</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
