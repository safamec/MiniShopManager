@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewBag.Title = Localizer["ResetPasswordTitle"];
    var email = ViewBag.Email as string;
}

<h2>@Localizer["ResetPasswordTitle"]</h2>

@if (!string.IsNullOrEmpty(email))
{
    @* Display validation errors *@
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <ul>
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }

    <form method="post" asp-action="ResetPassword" asp-controller="Account">
        <input type="hidden" name="email" value="@email" />

        <div class="mb-3">
            <label for="password" class="form-label">@Localizer["PasswordLabel"]:</label>
            <input type="password" id="password" name="newPassword" class="form-control" required />
        </div>

        <div class="mb-3">
            <label for="confirmPassword" class="form-label">@Localizer["ConfirmPasswordLabel"]:</label>
            <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" required />
        </div>

        <button type="submit" class="btn btn-primary">@Localizer["SubmitButton"]</button>
    </form>
}
else
{
    <p class="text-danger">@Localizer["InvalidEmailMessage"]</p>
}
