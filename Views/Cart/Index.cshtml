@model List<MiniShopManager.Models.Item>
@{
    ViewData["Title"] = "Cart";
}

<h2 class="mb-4 text-center">Your Cart</h2>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">Your cart is empty.</div>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="@item.ImageUrl" class="card-img-top" style="height:200px; object-fit:cover;" alt="@item.Name">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">Price: $@item.Price</p>
                        <p class="card-text">Quantity: @item.Stock</p>
                        <form asp-action="Remove" method="post">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-danger w-100">Remove</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="text-center mt-4">
        <a asp-action="Checkout" class="btn btn-primary btn-lg">Proceed to Checkout</a>
    </div>
}

}
