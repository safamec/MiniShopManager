@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@inject IViewLocalizer Localizer
@model MiniShopManager.Models.Item

@{
    ViewData["Title"] = Localizer["EditItemTitle"];
}
<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-warning text-white">
            <h3 class="mb-0">@Localizer["EditItem"]</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label">@Localizer["Name"]</label>
                    <input asp-for="Name" class="form-control" placeholder="@Localizer["EnterItemName"]" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Price" class="form-label">@Localizer["Price"]</label>
                    <input asp-for="Price" class="form-control" placeholder="@Localizer["EnterItemPrice"]" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Stock" class="form-label">@Localizer["Stock"]</label>
                    <input asp-for="Stock" class="form-control" placeholder="@Localizer["EnterStockQuantity"]" />
                    <span asp-validation-for="Stock" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ImageUrl" class="form-label">@Localizer["ImageUrl"]</label>
                    <input asp-for="ImageUrl" class="form-control" placeholder="@Localizer["EnterImageUrl"]" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-warning text-white">@Localizer["Update"]</button>
                    <a asp-action="Dashboard" class="btn btn-secondary">@Localizer["Cancel"]</a>
                </div>
            </form>
        </div>
    </div>
</div>
