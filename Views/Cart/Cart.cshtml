@model List<MiniShopManager.Models.Item>
@{
    ViewData["Title"] = "Checkout";
    var conversionRate = 0.385m; // USD -> OMR (decimal)
}

<h2 class="mb-4 text-center">Checkout</h2>

<div class="row">
    <div class="col-md-6">
        <h4>Items</h4>
        <ul class="list-group mb-4">
            @foreach (var item in Model)
            {
                var priceInOmr = item.Price * conversionRate;
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    @item.Name
                    <span>Qty: @item.Stock - @priceInOmr.ToString("0.00") OMR</span>
                </li>
            }
        </ul>

        <h5 class="mt-3">
            Total: @Model.Sum(i => i.Price * conversionRate).ToString("0.00") OMR
        </h5>
    </div>

    <div class="col-md-6">
        <h4>Customer Info</h4>
        <form asp-action="CheckoutConfirm" method="post">
            <div class="mb-3">
                <label for="customerName" class="form-label">Name</label>
                <input type="text" class="form-control" name="customerName" required />
            </div>
            <div class="mb-3">
                <label for="address" class="form-label">Address</label>
                <input type="text" class="form-control" name="address" required />
            </div>
            <button type="submit" class="btn btn-success w-100">Confirm Order</button>
        </form>
    </div>
</div>


    <div class="text-center mt-4">
        <h5>Total: @Model.Sum(i => i.Price * conversionRate).ToString("0.00") OMR</h5>
        <a asp-action="Checkout" class="btn btn-primary btn-lg mt-2">Proceed to Checkout</a>
    </div>
}
